doctype html
html
    head
        block tourHead
            meta(charset="UTF-8")
            meta(name="viewport" content="width=device-width, initial-scale=1.0")
            //-Add this
            //- meta(http-equiv="Content-Security-Policy" content="script-src 'self' api.mapbox.com;worker-src blob: ;connect-src https://*.tiles.mapbox.com https://api.mapbox.com https://events.mapbox.com")
            link(rel="stylesheet" href="/css/style.css")
            link(rel="shortcu icon" type="image/png" href="/img/favicon.png")
            link(href="https://fonts.googleapis.com/css?family=Lato:300,300i,700" rel="stylesheet" )

            title Natours | #{title}

    body
        header.header 
            nav.nav.nav--tours
                a.nav__el(href="/") All Tours 
            .header__logo 
                img(src="/img/logo-white.png" alt="logo")
            nav.nav.nav--user
                if user
                    a.nav__el.nav__el--logout Log out
                    a.nav__el(href="/myProfile")
                        img.nav__user-img(src=`/img/users/${user.photo}` alt="User photo")
                        span= user.name.split(" ")[0]
                else
                    a.nav__el(href="/login") login
                    a.nav__el.nav__el--cta(href="/signup") Sign up

        //- CONTENTS :
        block content 


        footer.footer
            .footer__logo 
                img(src="/img/logo-green.png" alt="logo")
            ul.footer__nav
                li: a(hre="#") About us
                li: a(hre="#") Download App
                li: a(hre="#") Become a guide
                li: a(hre="#") Careers
                li: a(hre="#") Contact
            p.footer__copyright &copy; By Marya

        script(src="/ClientSideJS/login.cjs")
        script(type="module" src='/ClientSideJS/bundled/index.js')
